{
  "name": "gitwatch",
  "version": "1.0.0",
  "description": "GitHub Notification Manager",
  "main": "src/electron.js",
  "scripts": {
    "react-start": "parcel -p 3000 index.html --out-dir build",
    "react-build": "parcel build index.html --out-dir build --public-url ./",
    "electron-build": "electron-builder",
    "clean-build": "rm -rf build/ .cache dist/",
    "build": "npm run clean-build && npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron . \""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GitNotifier/GitWatch.git"
  },
  "author": "John Doe <john@doe.com>",
  "license": "MIT",
  "homepage": "./",
  "bugs": {
    "url": "https://github.com/GitNotifier/GitWatch/issues"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "parcel-bundler": "^1.12.5",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.gitwatch",
    "files": [
      "src/electron.js",
      "src/assets/*",
      "build/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "category": "Productivity"
    }
  }
}
